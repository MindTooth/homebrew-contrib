{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:best-practices",
    ":label(dependencies)",
    ":timezone(Europe/Berlin)",
    ":automergeMinor"
  ],

  "enabledManagers": ["homebrew"],

  "packageRules": [
    {
      "matchManagers": ["homebrew"],
      "automerge": true,
      "extends": [
        ":semanticCommitType(fix)",
        "schedule:automergeNonOfficeHours"
      ]
    }
  ]
}
